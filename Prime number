SET SERVEROUTPUT ON;

CREATE OR REPLACE PROCEDURE find_prime_numbers(n IN NUMBER) IS
BEGIN
    IF n < 1 THEN
        DBMS_OUTPUT.PUT_LINE('Enter a positive number.');
        RETURN;
    END IF;

    FOR i IN 2..n LOOP
        DECLARE
            is_prime BOOLEAN := TRUE;
        BEGIN
            FOR j IN 2..i-1 LOOP
                IF MOD(i, j) = 0 THEN
                    is_prime := FALSE;
                    EXIT;
                END IF;
            END LOOP;

            IF is_prime THEN
                DBMS_OUTPUT.PUT_LINE(i || ' is prime');
            END IF;
        END;
    END LOOP;
END find_prime_numbers;
/

-- Execute
EXEC find_prime_numbers(20);
